<h1>Customers</h1>
	<ul><% @customers.each do |c| %>
		<li><%= c.name %>
		</li>
		<li><%= c.email %>
		</li>
		<li><%= c.phone %>
		</li>
		<%= link_to "Edit", edit_customer_path(c) %>
		<%= link_to "Info", customer_path(c) %>
		<%= link_to "Delete", c, {method: :delete, confirm: "Are you sure you want to delete?"} %>
		<%= link_to "New Order", new_ramen_path(customer:c.id) %>
		<br>
		<% end %>
	</ul>
<%= link_to "Add new customer", new_customer_path%>
